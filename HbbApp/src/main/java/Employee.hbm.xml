<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  
<hibernate-mapping>
	<class name="com.avinash.hibernateapp.HbbApp.Employee" table="employee">
		<id name="eid" column="eid" type="int"/>
		<property name="ename" column="ename" type="string"/>
		<property name="esal" column="esal" type="float"/>
		<property name="eaddr" column="eaddr" type="string"/>
	</class>
</hibernate-mapping>